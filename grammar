<program>       ::= <function> {"\n" <function>}
<function>      ::= <prototype> ":=" <exp>
<prototype>     ::= <ident> "(" <ident> {"," <ident>}")"
<exp>           ::= <implexp> {<impl> <implexp>}
<implexp>       ::= <term> {<sum> <term>}
<term>          ::= <factor> {<mul> <factor>}
<factor>        ::= <unary> |
                    <paren> |
                    <name> | 
                    <digit>
<paren>         ::= "(" <exp> ")"
<unary>         ::= "~" <factor> | 
                    "++" <factor> | 
                    "--" <factor>
<name>          ::= <ident> "(" <exp> {"," <exp>} ")" |
                    <ident>
<ident>         ::= "[a-z][_a-zA-Z0-9]*"
<impl>      	  ::= "->" | "+>"
<sum>           ::= "|" | "#" | "+" | "-"
<mul>           ::= "&" | "*"
<digit>         ::= "$" | "1" | "0"
