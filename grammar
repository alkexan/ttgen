<program>       ::= <function> {'\n' <function>}
<function>      ::= <prototype> ":=" <exp>
<prototype>     ::= <ident> "(" <ident> ["," <ident>]")"
<exp>           ::= <primary> {<impl> <primary>}
<primary>       ::= <term> {<sum> <term>}
<term>          ::= <factor> {<mul> <factor>}
<factor>        ::= <ident> | 
                    <digit> |
                    "(" <exp> ")" |
                    "~" <factor> | 
                    "++" <factor> | 
                    "--" <factor>
<ident>         ::= "[a-z][_a-zA-Z0-9]*"
<impl>      	  ::= "->" | "+>"
<sum>           ::= "|" | "#" | "+" | "-"
<mul>           ::= "&" | "*"
<digit>         ::= "$" | "1" | "0"
